{
  "name": "bitcoinwallet",
  "version": "1.0.0",
  "description": "Simple mobile Bitcoin & Ethereum wallet",
  "author": "Martin Litvaj <kamahl19@gmail.com> (http://litvaj.com)",
  "license": "MIT",
  "engines": {
    "node": ">=10.15.1",
    "yarn": ">=1.13.0"
  },
  "scripts": {
    "cleanup": "watchman watch-del-all && rm -rf node_modules && yarn install && rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-*",
    "format": "prettier --write '{src,__{tests,mocks}__}/**/*.js'",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .js src/",
    "postinstall": "sed -i -e \"s/var Script = function Script(from) {/var Script = function Script(from) { Address = require('..\\/address');/g\" ./node_modules/bitcore-lib/lib/script/script.js",
    "run-ios": "react-native run-ios",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "devDependencies": {
    "babel-eslint": "9.x",
    "babel-jest": "^22.1.0",
    "babel-preset-react-native": "^4.0.0",
    "eslint": "5.x",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "jest": "^22.1.4",
    "prettier": "^1.16.4",
    "redux-logger": "^3.0.6"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "bip21": "^2.0.2",
    "bitcore-wallet-client": "^6.7.5",
    "bs58check": "^2.1.2",
    "cryptocompare": "^1.0.0",
    "lodash.flattendeep": "^4.4.0",
    "node-libs-browser": "^2.2.0",
    "prop-types": "^15.6.2",
    "rc-form": "^1.5.0",
    "react": "^16.2.0",
    "react-native": "0.52.0",
    "react-native-camera": "^0.13.0",
    "react-native-dropdownalert": "^3.1.2",
    "react-native-qrcode-scanner": "^0.0.29",
    "react-native-qrcode-svg": "^5.0.6",
    "react-native-radio-buttons": "^1.0.0",
    "react-native-randombytes": "^3.0.0",
    "react-native-svg": "^5.5.1",
    "react-navigation": "^1.0.0-beta.27",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-saga": "^1.0.1",
    "reselect": "^4.0.0"
  },
  "jest": {
    "preset": "react-native"
  }
}
